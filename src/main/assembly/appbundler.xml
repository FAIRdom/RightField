<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>app</id>
	<formats>
		<format>dir</format>
	</formats>
	<baseDirectory>RightField.app</baseDirectory>
	<fileSets>
		<fileSet>
			<directory></directory>
			<outputDirectory>/Contents/Resources/</outputDirectory>
			<includes>
				<include>LICENSE</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/appbundler/en.lproj</directory>
			<outputDirectory>/Contents/Resources/en.lproj</outputDirectory>
			<includes>
				<include>Localizable.strings</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/appbundler</directory>
			<outputDirectory>/Contents/Resources</outputDirectory>
			<includes>
				<include>RightField.icns</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>/Contents/Java/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/appbundler</directory>
			<outputDirectory>/Contents/MacOS/</outputDirectory>
			<includes>
				<include>JavaAppLauncher</include>
			</includes>
                        <fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/appbundler</directory>
			<outputDirectory>/Contents/</outputDirectory>
			<includes>
				<include>PkgInfo</include>
				<include>Info.plist</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
	    <dependencySet>
	      <outputDirectory>/Contents/Java/</outputDirectory>
	      <includes>
	      </includes>
	      <excludes>
	      	<exclude>org.sysmo-db:rightfield</exclude>
	      </excludes>
	    </dependencySet>
   	</dependencySets>
</assembly>
